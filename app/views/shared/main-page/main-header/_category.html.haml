%li.main-page__header__nav-box__left-box__list__item
  %h2.main-page__header__nav-box__left-box__list__item__root
    = link_to large_categories_path, class: 'main-page__header__nav-box__left-box__list__item__root__link' do
      = fa_icon 'list', class: 'main-page__header__nav-box__left-box__list__item__root__icon'
      %span.main-page__header__nav-box__left-box__list__item__root__text
        カテゴリーから探す
  %ul.main-page__header__nav-box__left-box__list__item__parent-wrap
    - large_categories.each do |large_category|
      = render 'shared/main-page/main-header/category/l-category', { large_category: large_category }
    %li.main-page__header__nav-box__left-box__list__item__parent-wrap__parent
      %h3.main-page__header__nav-box__left-box__list__item__parent-wrap__parent__title
        = link_to 'カテゴリー一覧', large_categories_path, class: 'main-page__header__nav-box__left-box__list__item__parent-wrap__parent__link'