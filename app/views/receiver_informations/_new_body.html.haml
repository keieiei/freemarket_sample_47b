%main.single-page__body
  %section.single-page__body__container
    %h2.single-page__body__title
      住所入力
    = form_for receiver_information, url: user_receiver_informations_path, method: :post, html: { class: "single-page__body__form" } do |f|
      .single-page__body__form__box
        .single-page__body__form__group.single-page__body__form__group--top
          = f.label :name, "お名前", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          = f.text_field :family_name, placeholder: '例) 山田', class: 'single-page__body__form__group__input-text'
          = f.text_field :first_name, placeholder: '例) 彩', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :name_kana, "お名前カナ", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          = f.text_field :family_name_kana, placeholder: '例) ヤマダ', class: 'single-page__body__form__group__input-text'
          = f.text_field :first_name_kana, placeholder: '例) アヤ', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :postal_code, "郵便番号", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          = f.text_field :postal_code, placeholder: '例) 123-4567', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :prefecture, "都道府県", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          .single-page__body__form__group__select-wrap
            = f.select :prefecture, options_for_select(t('prefecture')), { }, { class: 'single-page__body__form__group__select-wrap__select' }
            = fa_icon 'angle-down', class: 'single-page__body__form__group__select-wrap__icon-arrow-bottom'
        .single-page__body__form__group
          = f.label :city, "市区町村", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :street, "番地", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__require-mark
            必須
          = f.text_field :street, placeholder: '例) 青山1-1-1', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :building, "建物名", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__optional-mark
            任意
          = f.text_field :building, placeholder: '例) 柳ビル103', class: 'single-page__body__form__group__input-text'
        .single-page__body__form__group
          = f.label :phone_number, "電話", class: 'single-page__body__form__group__label'
          %span.single-page__body__form__group__optional-mark
            任意
          = f.text_field :phone_number, placeholder: '例) 09012345678', class: 'single-page__body__form__group__input-text'
        = f.submit "次へ進む", class: "single-page__body__form__submit-btn"
