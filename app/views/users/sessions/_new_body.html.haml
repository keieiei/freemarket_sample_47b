%main.single-page__body
  .single-page__body__login-panel
    .single-page__body__login-panel__no-account
      %p.single-page__body__login-panel__no-account__text
        アカウントをお持ちでない方はこちら
      = link_to '新規会員登録', new_user_registration_path, class: 'single-page__body__login-panel__no-account__link'
    .single-page__body__login-panel__login-form-inner
      %button#facebook-login.single-page__body__login-panel__login-form-inner__btn.single-page__body__login-panel__login-form-inner__btn--facebook
        %i.fab.fa-facebook-square.single-page__body__login-panel__login-form-inner__btn__icon-facebook
        Facebookでログイン
      %button#google-login.single-page__body__login-panel__login-form-inner__btn.single-page__body__login-panel__login-form-inner__btn--google
        Googleでログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name), class: "single-page__body__login-panel__form") do |f|
      .single-page__body__login-panel__login-form-inner.single-page__body__login-panel__login-form-inner--below
        .single-page__body__login-panel__login-form-inner__group
          = f.email_field :email, placeholder: 'メールアドレス', class: 'single-page__body__login-panel__login-form-inner__group__input-text'
        .single-page__body__login-panel__login-form-inner__group
          = f.password_field :password, placeholder: 'パスワード', class: 'single-page__body__login-panel__login-form-inner__group__input-text'
        .single-page__body__login-panel__login-form-inner__group
          -# 「私はロボットではありません」は実装方法後で調べて作る。今は画像を仮置きで置く
          .single-page__body__login-panel__login-form-inner__group__recaptcha
            = image_tag('recaptcha.jpeg', alt: "recaptcha", class: "single-page__body__login-panel__login-form-inner__group__recaptcha__image")
        = f.submit "ログイン", class: "single-page__body__login-panel__login-form-inner__submit-btn"
        = link_to 'パスワードをお忘れの方', '', class: 'single-page__body__login-panel__login-form-inner__link'
